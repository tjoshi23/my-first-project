<div id="blob_form">
<div class="container">
  <%= form_for (@blog),:remote => true  do |form| %>
   
    <div class="field">
     <%= form.hidden_field :user_id, value:current_user.id%>
    </div>
    <div class="field"><br>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
    </div>

    <div class="field"><br>
      <%= form.label :description %><br>
      <%= form.text_area :description %>
    
    
   
    <div class="actions"><br>
      <%= form.submit %>
    </div>
  <% end %>
</div>
</div>