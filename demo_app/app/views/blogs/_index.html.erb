<div id="b_index">
   <div class="container ">
      <br><br><br><br>
      <% if user_signed_in? %>
      <%= link_to 'New Post', new_blog_path ,:remote => true %>
      <h1>Blogs</h1>
      <table class="table table-striped ">
         <thead >
            <tr>
               <th>Title</th>
               <th>Description</th>
            </tr>
         </thead>
         <tbody>
            <%@blogs.each do |blog| %>
            <tr>
               <td><%= blog.title %></td>
               <td><%= blog.description %></td>
               <td><%= link_to'show',blog_path(blog),:remote =>true%></td>
               <%if blog.user_id == current_user.id%>
               <td><%= link_to'edit',edit_blog_path(blog),:remote => true%></td>
               <td><%= link_to'delete',blog_path(blog),method: :delete,
                  data: {confirm: 'are you sure'},:remote => true %></td>
               <%else%>
               <td>...</td>
               <td>...</td>
               <%end%>
            </tr>
         </tbody>
         <%end%>
      </table>
      <br>
      <% else %>
   </div>
   <% end %>
</div>